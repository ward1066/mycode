<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
		xmlns:xuse="http://xuse.sourceforge.net" 
		xmlns:xhtml="http://www.w3.org/1999/xhtml"
		targetNamespace="http://xuse.sourceforge.net" 
		elementFormDefault="qualified" 
		attributeFormDefault="unqualified">
	
	<xs:include schemaLocation="data-types.xsd"/>
    <xs:include schemaLocation="xhtml-data-types-subset.xsd"/>
	
	
	<xs:element name="document" type="xuse:documentType">
		<xs:annotation>
			<xs:documentation>Generic document root node</xs:documentation>
		</xs:annotation>
	</xs:element>
	
	<xs:element name="p" type="xuse:paragraphType"/>
	<xs:element name="section" type="xuse:sectionType"/>
	
	<xs:complexType name="documentType">
		<xs:sequence>
			<xs:element name="document-information" type="xuse:documentInformationType"/>
			<xs:element name="distribution" type="xuse:documentDistibutionType" minOccurs="0"/>
			<xs:element ref="xuse:document-history"/>
			<xs:choice maxOccurs="unbounded">
			     <xs:element ref="xuse:section" />
			     <xs:any processContents="skip" namespace="##other"/>
			</xs:choice>
		</xs:sequence>
		<xs:attribute name="model-version" fixed="0.3" use="required"/>
		<xs:attribute name="document-type" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:string" >
					<xs:enumeration value="vision-document"/>
					<xs:enumeration value="software-requirements-specification"/>
					<xs:enumeration value="functional-requirements-specification"/>
					<xs:enumeration value="technical-specification"/>
					<xs:enumeration value="system-architecture-specification"/>
					<xs:enumeration value="generic"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	
	<xs:complexType name="documentInformationType">
		<xs:sequence>
			<xs:element ref="xuse:title">
				<xs:annotation>
					<xs:documentation>The title of the document</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element ref="xuse:author">
				<xs:annotation>
					<xs:documentation>Who is/are the primary author(s) of this document?</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="project" type="xs:string" minOccurs="0">
				<xs:annotation>
					<xs:documentation>The name of the project that this document belongs to e.g. Xuse</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="document-reference" type="xs:string" minOccurs="0">
				<xs:annotation>
					<xs:documentation>An (optional) unique reference number for this document.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="owner" type="xs:string" minOccurs="0">
				<xs:annotation>
					<xs:documentation>The person or department that "owns" this document - this may be different to the document author.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="customer" type="xs:string" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Who is the customer for this document (if any)?</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="release" type="xs:string" minOccurs="0">
				<xs:annotation>
					<xs:documentation>If this document currently focuses on a particular release of software - document that release here</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	
	<xs:complexType name="documentDistibutionType">
		<xs:choice maxOccurs="unbounded">
			<xs:element ref="xuse:stakeholder-ref"/>
			<xs:element name="reviewer" type="xuse:documentReviewerType"/>
			<xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:choice>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
				
	<xs:complexType name="documentReviewerType">
		<xs:sequence>
			<xs:element name="who"/>
			<xs:element name="role" type="xuse:roleType" minOccurs="0"/>
			<xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:anyAttribute processContents="skip" namespace="##other"/>
	</xs:complexType>
	
	<xs:complexType name="paragraphType" mixed="true">
		<xs:annotation>
			<xs:documentation xml:lang="en-GB">This is a generic paragraph</xs:documentation>
		</xs:annotation>
		<xs:choice>
			<xs:sequence>
				<xs:element ref="xuse:annotation" minOccurs="0" maxOccurs="unbounded"/>		
				<xs:choice minOccurs="0" maxOccurs="unbounded">		
				    <xs:element ref="xuse:p"/>
				    <xs:any processContents="lax" namespace="http://www.w3.org/2001/XInclude"/>
				</xs:choice>
		   </xs:sequence>
			<xs:sequence>
				<xs:element ref="xuse:annotation" minOccurs="0" maxOccurs="unbounded"/>
		   	    <xs:choice minOccurs="0" maxOccurs="unbounded">
		   		 <xs:element ref="xuse:p"/>
		   		 <xs:element name="img" type="xuse:imgType"/>
		   		 <xs:element name="section-ref" type="xuse:section-refType"/>
            	 <xs:group ref="xuse:referenceType-group"/>
            	 <xs:group ref="xuse:xhtml-subset"/>
            	 <xs:group ref="xuse:replacement-text-elements-group"/>
            	 <xs:any processContents="skip" namespace="##other"/>
        		</xs:choice>
			</xs:sequence>	
		</xs:choice>		
		<xs:attribute name="higlight" type="xs:boolean" use="optional"/>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
    </xs:complexType>

    
    <xs:complexType name="imgType">
    	<xs:annotation>
    		<xs:documentation xml:lang="en-GB">Describes the inserion of an image into the document - note width/height and fit are mutually exclusive."</xs:documentation>
    	</xs:annotation>
      <xs:attribute name="id" use="optional"/>
    	<xs:attribute name="src" use="required"/>
    	<xs:attribute name="width" use="optional"/>
    	<xs:attribute name="caption" use="optional"/>
    	<xs:attribute name="height" use="optional"/>
    	<xs:attribute name="fit" use="optional">
    		<xs:simpleType>
    			<xs:restriction base="xs:string" >
    				<xs:enumeration value="true"/>
    				<xs:enumeration value="false"/>
    			</xs:restriction>
    		</xs:simpleType>
    	</xs:attribute>
    </xs:complexType>
    
    <xs:complexType name="sectionType">
    	<xs:annotation>
			<xs:documentation xml:lang="en-GB">Represents a section of a document</xs:documentation>
    	</xs:annotation>
    	<xs:choice maxOccurs="unbounded">
    		<xs:group ref="xuse:content-containers"/>
    		<xs:group ref="xuse:content-markers"/>
    	</xs:choice>
    	<xs:attribute name="id" use="required" type="xs:string"/>
    	<xs:attribute name="title" use="required" type="xs:string"/>
    </xs:complexType>   
    
    <xs:complexType name="section-refType">
        <xs:annotation>
            <xs:documentation>when referencing another section</xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="section-id" use="required"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>     
    
	<xs:group name="content-markers">
	   <xs:annotation>
					<xs:documentation xml:lang="en-GB">These are special placeholders to indicate where certain content should go - for instance a use case list</xs:documentation>
				</xs:annotation>
    	<xs:choice>
    		<xs:element name="feature-list"/>
    		<xs:element name="requirements-list">
    			<xs:complexType>
					<xs:attribute name="category" use="optional"/>
					<xs:attribute name="package" use="optional"/>
					<xs:attribute name="taxonomy" use="optional">
					   <xs:annotation>
                            <xs:documentation>Filter on custom taxonmy. Filter MUST be provided in the form "classifier=value"</xs:documentation>
                        </xs:annotation>
					</xs:attribute>
					<xs:attribute name="sort-order" use="optional">
						<xs:simpleType>
							<xs:restriction base="xs:string">
								<xs:enumeration value="id"/>
								<xs:enumeration value="title"/>
								<xs:enumeration value="package"/>
								<xs:enumeration value="category"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:attribute>
					<xs:attribute name="level" use="optional">
						<xs:annotation>
							<xs:documentation>What level of requirement to show (level 1 are top level requirements, level 2 are more detailed requirements etc.). Requirements listed are all those up to including the level indicated - e.g. selecting level 2 will mean level 1 and level 2 requirements are shown. The level of a requirement is automaticall derived via the parent relationship.</xs:documentation>
						</xs:annotation>
					</xs:attribute>
					<xs:attribute ref="xuse:detail" use="optional"/>
    			</xs:complexType>
    		</xs:element>
    		<xs:element name="use-case-list">
    			<xs:complexType>
					<xs:attribute name="package" use="optional"/>
					<xs:attribute name="complexity" use="optional"/>
					<xs:attribute name="priority" use="optional"/>
					<xs:attribute name="taxonomy" use="optional">
                       <xs:annotation>
                            <xs:documentation>Filter on custom taxonmy. Filter MUST be provided in the form "classifier=value"</xs:documentation>
                        </xs:annotation>
                    </xs:attribute>
					<xs:attribute ref="xuse:detail" use="optional"/>
					<xs:attribute name="sort-order" use="optional">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:enumeration value="id"/>
                                <xs:enumeration value="name"/>
                                <xs:enumeration value="package"/>
                                <xs:enumeration value="priority"/>
                                <xs:enumeration value="complexity"/>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:attribute>
    			</xs:complexType>
    		</xs:element>
    		<xs:element name="actor-list">
    			<xs:complexType>
					<xs:attribute ref="xuse:detail" use="optional"/>
    			</xs:complexType>
    		</xs:element>
    		<xs:element name="stakeholder-list">
    			<xs:complexType>
					<xs:attribute ref="xuse:detail" use="optional"/>
    			</xs:complexType>
    		</xs:element>
    	</xs:choice>
    </xs:group>
    
    <xs:group name="content-containers">
        <xs:choice>
            <xs:element ref="xuse:section"/>
            <xs:element ref="xuse:p"/>
            <xs:any processContents="lax" namespace="http://www.w3.org/2001/XInclude"/> 
            <xs:group ref="xuse:xhtml-block-elements"/>
            <xs:group ref="xuse:content-markers"/>
        </xs:choice>
    </xs:group>

	<xs:attribute name="detail">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:enumeration value="title-only"/>
				<xs:enumeration value="description"/>
				<xs:enumeration value="full"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:attribute>
	
</xs:schema>
