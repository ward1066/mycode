<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xuse="http://xuse.sourceforge.net"
           targetNamespace="http://xuse.sourceforge.net"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           version="1.0">

    <xs:include schemaLocation="replacement-elements.xsd"/>
               
	<xs:element name="req" type="xuse:requirementType"/>
	<xs:element name="title" type="xuse:titleType"/>
	<xs:element name="description" type="xuse:descriptionType"/>
	<xs:element name="classification" type="xuse:classificationType"/>
	<xs:element name="taxonomy" type="xuse:taxonomyType" nillable="false"/>
	<xs:element name="package"/>
	<xs:element name="type" default="functional" nillable="false">
	   <xs:complexType>
	       <xs:simpleContent>
				<xs:extension base="xuse:requirementTypes">
				    <xs:attribute name="is-feature" type="xs:boolean" use="optional"/>
				</xs:extension>			
		</xs:simpleContent>		
	</xs:complexType>
	</xs:element>
	<xs:element name="parent">
		<xs:complexType>
			<xs:attribute name="refId" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:simpleType name="requirementTypes">
	   <xs:restriction base="xs:string">
	        <xs:enumeration value="business"/>
	        <xs:enumeration value="success-criteria"/>
	        <xs:enumeration value="assumption"/>
	        <xs:enumeration value="constraint"/>
            <xs:enumeration value="functional"/>
            <xs:enumeration value="non-functional"/>            
            <xs:enumeration value="architectural"/>
            <xs:enumeration value="technical"/>
            <xs:enumeration value="inverse"/>
        </xs:restriction>
	</xs:simpleType>
	<xs:element name="status" type="xuse:statusType"/>
    <xs:element name="author" type="xuse:authorType"/>
	<xs:element name="actor-ref" type="xuse:actor-refType"/>
	<xs:element name="document-history" type="xuse:document-historyType"/>
    <xs:element name="intended-audience" type="xuse:audienceType"/>
	<xs:element name="version" type="xuse:versionType"/>
    <xs:element name="stakeholder" type="xuse:stakeholderType"/>
    <xs:element name="annotation" type="xuse:annotationType"/>
	<xs:element name="req-ref" type="xuse:requirement-refType" nillable="true">
		<xs:annotation>
			<xs:documentation>Reference to a requirement</xs:documentation>
		</xs:annotation>
	</xs:element>
    <xs:element name="stakeholder-ref" type="xuse:stakeholder-refType" nillable="true">
		<xs:annotation>
			<xs:documentation>Reference to a stakeholder</xs:documentation>
		</xs:annotation>
	</xs:element>
    <xs:element name="uc-ref" type="xuse:use-case-refType" nillable="true">
		<xs:annotation>
			<xs:documentation>Reference to a use-case</xs:documentation>
		</xs:annotation>
	</xs:element>
    <xs:element name="uc-stereotype" type="xuse:useCaseRelationshipStereotypeType"/>
	<!-- Data types below -->
	<xs:complexType name="requirementType">
		<xs:sequence>
			<xs:element ref="xuse:annotation" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element ref="xuse:title" minOccurs="0"/>
			<xs:element ref="xuse:description"/>
         <xs:element ref="xuse:author" minOccurs="0"/>
			<xs:element ref="xuse:classification" minOccurs="0"/>
			<xs:element ref="xuse:parent" minOccurs="0"/>
			<xs:element ref="xuse:req-ref" minOccurs="0" maxOccurs="unbounded"/>
         <xs:element ref="xuse:stakeholder-ref" minOccurs="0" maxOccurs="unbounded"/>
         <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="id" type="xs:string" use="required"/>
		<xs:attribute name="version" type="xs:double" use="required"/>
		<xs:attribute name="strength" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:string">
					<xs:enumeration value="shall"/>
					<xs:enumeration value="should"/>
					<xs:enumeration value="may"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="creation-date" type="xuse:dateOrDateTimeType" use="required"/>
      <xs:attribute name="modification-date" type="xuse:dateOrDateTimeType" use="required"/>
      <xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	<xs:complexType name="titleType" mixed="true">
        <xs:choice minOccurs="0" maxOccurs="unbounded">
          <xs:group ref="xuse:replacement-text-elements-group"/>
        </xs:choice>
    </xs:complexType>
    <xs:complexType name="descriptionType" mixed="true">
        <xs:choice minOccurs="0" maxOccurs="unbounded">
          <xs:group ref="xuse:referenceType-group"/>
          <xs:group ref="xuse:replacement-text-elements-group"/>
          <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
        </xs:choice>
		  <xs:anyAttribute processContents="lax" namespace="##other"/>
    </xs:complexType>
    <xs:complexType name="narrativeType">
    		<xs:simpleContent>
        		<xs:extension base="xs:string">
        		</xs:extension>
        	</xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="taxonomyType">
    		<xs:simpleContent>
				<xs:extension base="xs:string">
					<xs:attribute name="classifier" use="required"/>
        		</xs:extension>
        </xs:simpleContent>      
    </xs:complexType>
	<xs:complexType name="classificationType">
		<xs:sequence>
			<xs:element ref="xuse:type"/>
			<xs:element ref="xuse:status"/>
			<xs:element ref="xuse:package" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element ref="xuse:taxonomy" minOccurs="0" maxOccurs="unbounded"/>
			<xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	<xs:complexType name="packageType">
		<xs:simpleContent>
			<xs:extension base="xs:string"/>
		</xs:simpleContent>
	</xs:complexType>
	<xs:simpleType name="statusType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="proposed"/>
			<xs:enumeration value="agreed"/>
			<xs:enumeration value="onhold"/>
			<xs:enumeration value="rejected"/>
			<xs:enumeration value="withdrawn"/>
			<xs:enumeration value="implemented"/>
			<xs:enumeration value="partially-implemented"/>
			<xs:enumeration value="operational"/>
		</xs:restriction>
	</xs:simpleType>
    <xs:simpleType name="audienceType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="all"/>
			<xs:enumeration value="internal"/>
			<xs:enumeration value="client"/>
			<xs:enumeration value="requirements"/>
         <xs:enumeration value="development"/>
         <xs:enumeration value="design"/>
         <xs:enumeration value="test"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="actor-refType">
		<xs:attribute name="refId" use="required"/>
	</xs:complexType>
    <xs:complexType name="stakeholder-refType">
		<xs:attribute name="refId" use="required"/>
	</xs:complexType>
    <xs:simpleType name="useCaseRelationshipStereotypeType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="include"/>
			<xs:enumeration value="extend"/>
            <xs:enumeration value="generalise"/>
		</xs:restriction>
	</xs:simpleType>
    <xs:simpleType name="authorType">
		<xs:restriction base="xs:string">
			
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="document-historyType">
		<xs:sequence>
			<xs:element ref="xuse:version" maxOccurs="unbounded"/>
         <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="current-version" use="required"/>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	<xs:complexType name="versionType">
		<xs:sequence>
			<xs:element name="revision" type="xs:double"/>
			<xs:element ref="xuse:author"/>
			<xs:element name="change-date" type="xuse:dateOrDateTimeType"/>
			<xs:element ref="xuse:description"/>
			<xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	<xs:complexType name="requirement-refType">
		<xs:annotation>
			<xs:documentation>when referencing an existing requirement</xs:documentation>
		</xs:annotation>
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="refId" use="required"/>
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
    <xs:complexType name="use-case-refType">
		<xs:annotation>
			<xs:documentation>Used when referencing a use-case</xs:documentation>
		</xs:annotation>
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="refId" use="required"/>
                <xs:attribute name="stereotype"/>
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="releaseRefType">
		<xs:annotation>
			<xs:documentation>when referencing an existing requirement</xs:documentation>
		</xs:annotation>
		<xs:simpleContent>
			<xs:extension base="xs:string">				
				<xs:attribute name="refId" use="required"/>
			</xs:extension>
		</xs:simpleContent>		
	</xs:complexType>
	<xs:complexType name="requirementsCollectionType">
		<xs:annotation>
			<xs:documentation>Represents a collection of referenced requirements that are logically grouped together for documentation purposes</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element ref="xuse:req-ref" maxOccurs="unbounded"/>
			<xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
    <xs:complexType name="annotationType">
		<xs:annotation>
			<xs:documentation>Re-usable data type that can be inserted elsewhere within other types to represent a clarification. The clarification should be a wholly owned subsiduary of the enclosing type instance.</xs:documentation>
		</xs:annotation>
		<xs:sequence>
            <xs:element ref="xuse:description"/>
            <xs:element ref="xuse:author"/>
            <xs:element ref="xuse:intended-audience"/>
            <xs:element name="creation-date" type="xuse:dateOrDateTimeType" minOccurs="0"/>
            <xs:element name="comments" type="xuse:commentsType" minOccurs="0"/>
            <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
	<xs:complexType name="commentsType">
	   <xs:sequence>
	       <xs:element name="comment" type="xuse:commentType" maxOccurs="unbounded"/>
	       <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
	   </xs:sequence>
	</xs:complexType>
	<xs:complexType name="commentType">
	   <xs:annotation>
	       <xs:documentation>Re-usable block that represents a comment.</xs:documentation>
	   </xs:annotation>
	   <xs:sequence>
	       <xs:element ref="xuse:description" minOccurs="0"/>
           <xs:element name="comment-author" type="xuse:authorType" minOccurs="0"/>
           <xs:element name="comment-date" type="xuse:dateOrDateTimeType" minOccurs="0"/>
           <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
	   </xs:sequence>
	</xs:complexType>
    <xs:complexType name="stakeholderType">
		<xs:annotation>
			<xs:documentation>Describes a stakeholder of a requirement and/or use-case.</xs:documentation>
		</xs:annotation>
		<xs:sequence>
            <xs:element ref="xuse:title"/>
				<xs:element ref="xuse:description"/>
            <xs:element name="role" type="xuse:roleType"/>
            <xs:element name="representative" type="xuse:userRepresentativeType" minOccurs="0" maxOccurs="unbounded"/>
            <xs:any processContents="lax" namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="id" use="required"/>
        <xs:anyAttribute processContents="lax" namespace="##other"/>
	</xs:complexType>
    <xs:simpleType name="roleType">
		<xs:restriction base="xs:string">
		</xs:restriction>
	</xs:simpleType>
    <xs:simpleType name="userRepresentativeType">
		<xs:restriction base="xs:string">
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="dateOrDateTimeType">
	   <xs:union memberTypes="xs:date xs:dateTime" />
	</xs:simpleType>
		
	<xs:group name="referenceType-group">
		<xs:annotation>
			<xs:documentation xml:lang="en-GB">Group of all the different reference elements that can be created within Xuse</xs:documentation>
		</xs:annotation>	
		<xs:choice>
			 <xs:element ref="xuse:uc-ref"/>
          <xs:element ref="xuse:req-ref"/>
          <xs:element ref="xuse:uc-stereotype"/>
          <xs:element ref="xuse:actor-ref"/>
			 <xs:element ref="xuse:stakeholder-ref"/>
		</xs:choice>
	</xs:group>
	
</xs:schema>
